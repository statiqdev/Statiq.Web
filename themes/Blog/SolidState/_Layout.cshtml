@{ 
	string Title = Model.WithoutSettings.String(BlogKeys.Title); 
	string PageTitle = Context.String(BlogKeys.Title) + (string.IsNullOrWhiteSpace(Title) ? string.Empty : " - " + Title);
}


<!DOCTYPE HTML>
<!--
